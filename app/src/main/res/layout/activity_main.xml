<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_single_hlist"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Single hontorizal list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/button_single_vlist"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Single vertical list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_single_hlist"
        android:layout_marginTop="30dp"  />

    <Button
        android:id="@+id/button_single_multilist"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Multiple vertical list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_single_vlist"
        android:layout_marginTop="30dp"  />

    <Button
        android:id="@+id/button_list_with_sub"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="With sublist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_single_multilist"
        android:layout_marginTop="30dp"  />
</androidx.constraintlayout.widget.ConstraintLayout>